<div class='container'>
<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content, placeholder: "Please write your review here: " %>
  <%= f.input :rating, placeholder: "Select a rating (from 0 to 5!)" %>
  <%= f.submit "Add your review", class: "btn btn-primary" %>
<% end %>
</div>
